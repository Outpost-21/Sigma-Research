<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ==================== Research Tab ============================= -->

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ResearchProjectDef[defName="CarpetMaking"]</xpath>
		<value>
			<tab>Sigma_Medieval</tab>
		</value>
	</Operation>

	<!-- ==================== Tech Level ============================= -->

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ResearchProjectDef[defName="CarpetMaking"]/techLevel</xpath>
		<value>
			<techLevel>Medieval</techLevel>
		</value>
	</Operation>

	<!-- ==================== Horizontal Position ==================== -->

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ResearchProjectDef[defName="CarpetMaking"]/researchViewX</xpath>
		<value>
			<researchViewX>0</researchViewX>
		</value>
	</Operation>

	<!-- ==================== Vertical Position ====================== -->

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ResearchProjectDef[defName="CarpetMaking"]/researchViewY</xpath>
		<value>
			<researchViewY>0.5</researchViewY>
		</value>
	</Operation>

</Patch>