<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ==================== TurretPack ============================= -->

	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ==================== Research Tab ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]/tab</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]/tab</xpath>
					<value>
						<tab>Sigma_Industrial</tab>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]</xpath>
					<value>
						<tab>Sigma_Industrial</tab>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Tech Level ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]/techLevel</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]/techLevel</xpath>
					<value>
						<techLevel>Industrial</techLevel>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]</xpath>
					<value>
						<techLevel>Industrial</techLevel>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Horizontal Position ==================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]/researchViewX</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]/researchViewX</xpath>
					<value>
						<researchViewX>8</researchViewX>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]</xpath>
					<value>
						<researchViewX>8</researchViewX>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Vertical Position ====================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]/researchViewY</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]/researchViewY</xpath>
					<value>
						<researchViewY>2.5</researchViewY>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="TurretPack"]</xpath>
					<value>
						<researchViewY>2.5</researchViewY>
					</value>
				</nomatch>
			</li>
		</operations>
	</Operation>

</Patch>