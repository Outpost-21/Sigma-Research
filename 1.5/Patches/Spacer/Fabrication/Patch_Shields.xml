<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ==================== ShieldBelt ============================= -->

	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ==================== Research Tab ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]/tab</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]/tab</xpath>
					<value>
						<tab>Sigma_Spacer</tab>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]</xpath>
					<value>
						<tab>Sigma_Spacer</tab>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Tech Level ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]/techLevel</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]/techLevel</xpath>
					<value>
						<techLevel>techLevel</techLevel>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]</xpath>
					<value>
						<techLevel>techLevel</techLevel>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Horizontal Position ==================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]/researchViewX</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]/researchViewX</xpath>
					<value>
						<researchViewX>researchViewX</researchViewX>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]</xpath>
					<value>
						<researchViewX>researchViewX</researchViewX>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Vertical Position ====================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]/researchViewY</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]/researchViewY</xpath>
					<value>
						<researchViewY>researchViewY</researchViewY>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="ShieldBelt"]</xpath>
					<value>
						<researchViewY>researchViewY</researchViewY>
					</value>
				</nomatch>
			</li>
		</operations>
	</Operation>

</Patch>