<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ==================== Xenogermination ============================= -->

	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ==================== Research Tab ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]/tab</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]/tab</xpath>
					<value>
						<tab>Sigma_Spacer</tab>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]</xpath>
					<value>
						<tab>Sigma_Spacer</tab>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Tech Level ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]/techLevel</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]/techLevel</xpath>
					<value>
						<techLevel>Spacer</techLevel>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]</xpath>
					<value>
						<techLevel>Spacer</techLevel>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Horizontal Position ==================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]/researchViewX</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]/researchViewX</xpath>
					<value>
						<researchViewX>0</researchViewX>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]</xpath>
					<value>
						<researchViewX>0</researchViewX>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Vertical Position ====================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]/researchViewY</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]/researchViewY</xpath>
					<value>
						<researchViewY>4</researchViewY>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="Xenogermination"]</xpath>
					<value>
						<researchViewY>4</researchViewY>
					</value>
				</nomatch>
			</li>
		</operations>
	</Operation>

</Patch>