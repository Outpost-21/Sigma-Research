<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ==================== UltraMechtech ============================= -->

	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ==================== Research Tab ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/tab</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/tab</xpath>
					<value>
						<tab>Sigma_Ultratech</tab>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]</xpath>
					<value>
						<tab>Sigma_Ultratech</tab>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Tech Level ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/techLevel</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/techLevel</xpath>
					<value>
						<techLevel>Ultra</techLevel>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]</xpath>
					<value>
						<techLevel>Ultra</techLevel>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Horizontal Position ==================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/researchViewX</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/researchViewX</xpath>
					<value>
						<researchViewX>0</researchViewX>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]</xpath>
					<value>
						<researchViewX>0</researchViewX>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Vertical Position ====================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/researchViewY</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]/researchViewY</xpath>
					<value>
						<researchViewY>5</researchViewY>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="UltraMechtech"]</xpath>
					<value>
						<researchViewY>5</researchViewY>
					</value>
				</nomatch>
			</li>
		</operations>
	</Operation>

</Patch>