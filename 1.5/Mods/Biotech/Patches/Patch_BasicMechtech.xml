<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ==================== BasicMechtech ============================= -->

	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ==================== Research Tab ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/tab</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/tab</xpath>
					<value>
						<tab>Sigma_Industrial</tab>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]</xpath>
					<value>
						<tab>Sigma_Industrial</tab>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Tech Level ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/techLevel</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/tab</xpath>
					<value>
						<techLevel>Industrial</techLevel>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]</xpath>
					<value>
						<techLevel>Industrial</techLevel>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Prerequisites ==================== -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/prerequisites</xpath>
				<value>
					<prerequisites>
						<li>Machining</li>
					</prerequisites>
				</value>
			</li>
			<!-- ==================== Horizontal Position ==================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/researchViewX</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/researchViewX</xpath>
					<value>
						<researchViewX>researchViewX</researchViewX>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]</xpath>
					<value>
						<researchViewX>researchViewX</researchViewX>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Vertical Position ====================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/researchViewY</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]/researchViewY</xpath>
					<value>
						<researchViewY>researchViewY</researchViewY>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="BasicMechtech"]</xpath>
					<value>
						<researchViewY>researchViewY</researchViewY>
					</value>
				</nomatch>
			</li>
		</operations>
	</Operation>

</Patch>