<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- ==================== NobleApparel ============================= -->

	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ==================== Research Tab ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]/tab</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]/tab</xpath>
					<value>
						<tab>Sigma_Medieval</tab>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]</xpath>
					<value>
						<tab>Sigma_Medieval</tab>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Tech Level ============================= -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]/techLevel</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]/techLevel</xpath>
					<value>
						<techLevel>Medieval</techLevel>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]</xpath>
					<value>
						<techLevel>Medieval</techLevel>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Horizontal Position ==================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]/researchViewX</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]/researchViewX</xpath>
					<value>
						<researchViewX>1</researchViewX>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]</xpath>
					<value>
						<researchViewX>1</researchViewX>
					</value>
				</nomatch>
			</li>
			<!-- ==================== Vertical Position ====================== -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]/researchViewY</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]/researchViewY</xpath>
					<value>
						<researchViewY>1.5</researchViewY>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="NobleApparel"]</xpath>
					<value>
						<researchViewY>1.5</researchViewY>
					</value>
				</nomatch>
			</li>
		</operations>
	</Operation>

</Patch>